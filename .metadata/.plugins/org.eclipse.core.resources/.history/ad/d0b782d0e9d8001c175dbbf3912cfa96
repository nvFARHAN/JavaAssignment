package com.farhan;

public class StudentMain {
	
	Student s = new Student();
	
	StudentMain()
	{
		
	}
	
	StudentMain(int roll,String name,int age,int marks)
	{
		if(age>18 && age<60 && marks>0 && marks<500)
		{
			this.s.roll=roll;
			this.s.name=name;
			this.s.age=age;
			this.s.marks=marks;
		}
		else
			System.out.println("Please enter valid arguments");
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		StudentMain s1 = new StudentMain();
		StudentMain s2 = new StudentMain(239,"Madhuri Patel",20,300);
		System.out.println("Roll : "+s1.s.roll);
		System.out.println("Name : "+s1.s.name);
		System.out.println("Age : "+s1.s.age);
		System.out.println("Marks : "+s1.s.marks);
		System.out.println();
		System.out.println("Roll : "+s2.s.roll);
		System.out.println("Name : "+s2.s.name);
		System.out.println("Age : "+s2.s.age);
		System.out.println("Marks : "+s2.s.marks);

	}

}
