	public int getWithdrawAmount()
	{
		Scanner sc = new Scanner(System.in);
		while(true)
		{
			System.out.println("Enter the amount to be withdrawn : ");
			int amount = sc.nextInt();
			if(amount<=0)
			{
				System.out.println("Amount should be positive.");
				continue;
			}
			return amount;
		}	
	}
}
